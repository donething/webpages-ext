{
  "manifest_version": 3,
  "name": "WebpagesExt(WPE)",
  "description": "扩展长逛网站的功能",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "background": {
    "service_worker": "src/pages/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "contentStyle.css"
      ]
    },
    {
      "matches": [
        "*://www.nodeseek.com/post-*"
      ],
      "js": [
        "/src/pages/content/nodeseek/post.ts"
      ]
    },
    {
      "matches": [
        "*://www.nodeseek.com/notification*"
      ],
      "js": [
        "/src/pages/content/nodeseek/notication.ts"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon-128.png",
        "icon-32.png",
        "/icons/*.svg"
      ],
      "matches": [
        "<all_urls>"
      ],
      "use_dynamic_url": false
    }
  ]
}
